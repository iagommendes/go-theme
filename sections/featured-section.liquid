{%- style -%}
  .featured-section {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin: 8rem auto;
    max-width: 1200px;
    padding: 0 15px;
    width: 100%;
    gap: 20px;
  }

  .section-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 50%;
  }

  .section-item img {
    width: 100%;
    border-radius: 5px;
  }

  .section-item p {
    font-size: 21px;
    text-align: center;
    margin-top: 5px;
    font-weight: 700;
    padding-bottom: 5px;
  }
{%- endstyle -%}

