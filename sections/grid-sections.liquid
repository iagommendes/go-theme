{% schema %}
{
  "name": "Grid de Seções",
  "blocks": [
    {
      "type": "grid_item",
      "name": "Item da Grid",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagem"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Texto",
          "default": "Texto padrão"
        }
      ],
      "limit": 6
    }
  ]
}
{% endschema %}

<div class="grid-section">
  {% for block in section.blocks %}
    <div class="grid-item">
      {% if block.settings.image != blank %}
        <img src="{{ block.settings.image | img_url: '378x324' }}" alt="{{ block.settings.text }}">
      {% endif %}
      <div class="text-container">
        <p>{{ block.settings.text }}</p>
      </div>
    </div>
  {% endfor %}
</div>

{%- style -%}
  .grid-section {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-gap: 10px;
  }
  .grid-item {
    width: 100%;
  }
  .grid-item img {
    width: 100%;
    height: auto;
  }
  .text-container {
    background-color: #f0f0f0;
    padding: 10px;
  }
{%- endstyle -%}
