{%- style -%}
  .topbar {
    background-color: #fdf7fa;
    padding: 0;
  }

  .topbar-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 33px;
  }

  .topbar-messages {
    display: flex;
    flex-direction: column;
    margin-bottom: 24px;
    overflow: hidden; /* Ensure content doesn't overflow */
  }

  .topbar-message {
    font-size: 14px;
    font-weight: 500;
    color: #626266;
    margin-right: 20px;
    margin-bottom: 10px; /* Adjust margin to control spacing between messages */
  }

  .topbar-progress {
    width: 100px;
    height: 2px;
    background-color: #000;
    margin-right: 20px;
  }

  .topbar-menu {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .topbar-menu li {
    list-style-type: none;
    margin-right: 20px; /* Adjust the spacing between menu items */
  }

  .topbar-menu li:not(:last-child)::after {
    content: "•"; /* Unicode character for a bullet point, you can customize this */
    margin-left: 10px; /* Adjust the spacing between dots and text */
    color: #005baa; /* Color of the dots */
  }

  .topbar-menu li a {
    font-size: 14px;
    color: #005baa;
    text-decoration: none;
    font-weight: 700;
  }

  .topbar-menu li a:hover {
    color: #000;
  }

  @media (max-width: 767px) {
    .topbar-container {
      flex-direction: column;
    }

    .topbar-messages {
      margin-bottom: 10px;
    }

    .topbar-menu {
      display: none; /* Hide the menu on mobile devices */
      margin-top: 10px;
    }
  }

  @media (min-width: 768px) and (max-width: 1199px) {
    .topbar-messages {
      margin-right: 20px;
    }
  }

  @media (min-width: 1200px) {
    .topbar-messages {
      margin-right: 20px;
    }
  }
{%- endstyle -%}


<script>
  function scrollMessages() {
    const container = document.getElementById('topbar-messages');
    const firstMessage = container.firstElementChild;

    // Remove the first message
    container.removeChild(firstMessage);

    // Clone the first message
    const clonedMessage = firstMessage.cloneNode(true);

    // Append the cloned message to the container
    container.appendChild(clonedMessage);
  }

  setInterval(scrollMessages, 2000);
</script>



